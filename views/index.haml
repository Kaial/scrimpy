%html
	%head
		%meta{'http-equiv' => "content-type", :content => "text/html", :charset => "utf-8"}/	
		%link(rel="icon" type="image/x-icon" href="/img/favicon.ico")
		%link(href="/css/font/fonts.css" rel="stylesheet" type="text/css")
		%link{:href => "/css/main.css", :rel => "stylesheet", :type => "text/css"}/
		%title=$Blog.title
	%body
		#header
			#logo      					 
				%h1 
					%a{:href => "/"}
						%img(src="/img/logo.png" alt="fedora")
						=$Blog.title
				%p 
					by
					=$Blog.author
		#content
			- posts.each do |post|
				.post
					%p.date
						=post.created.strftime("%b")
						%b= post.created.strftime("%d")
					%h2.title
						%a{:href => post.url} 
							= post.title
					%p.meta
						%small
							-post.tags.each do |tag|
								%a{:href => "past/tags/#{tag}"}
									=tag
					#entry
						=post.summary_html
			#footer
